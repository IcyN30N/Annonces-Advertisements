<p id="notice"><%= notice %></p>
<section class="row text-center">
  <h1 class="col-lg-12">Annonces (<%= @how_many_published_ads %>)</h1>
  <p class="col-lg-12"> <%= flash[:not_admin] %> </p>
  <div class="col-lg-4">
  </div>
  <%= link_to 'Créer une annonce', new_advertisement_path, class:"perso-link col-lg-4" %>
  <div class="col-lg-4">
  </div>
</section>
<section class="row content-row">
  <% @advertisements.each do |advertisement| %>
  <% @advertiser = User.find(advertisement.user_id) %>
    <div class="col-lg-4 text-center">
      <h2><%= advertisement.title %> | <%= @advertiser.name %> </h2>
      <p><%= advertisement.price %> euros</p>
      <p><%= advertisement_content_checker(advertisement.content) %></p>
      <p><%= link_to "détails", advertisement, class: 'perso-link btn btn-default' %></p>
    </div>
  <% end %>
</section>
